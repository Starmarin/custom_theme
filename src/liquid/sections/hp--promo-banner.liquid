    "blocks": [
      {
        "type": "link",
        "name": "Link",
        "settings": [
          {"type": "header", "content": "Settings"},
          {
            "type": "text",
            "id": "link_text",
            "label": "Link Text"
          },
          {
            "type": "url",
            "id": "link_url",
            "label": "Link URL"
          }
        ]
      }
    ],
    "presets": [{
      "name": "Promo Banner",
