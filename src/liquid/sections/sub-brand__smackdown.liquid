            {
              "type": "image_picker",
              "id": "column_desktop_image_<%- i -%>",
              "label": "Desktop Image"
            },
            {
              "type": "image_picker",
              "id": "column_mobile_image_<%- i -%>",
              "label": "Mobile Image"
            },
            {
              "type": "text",
              "id": "column_heading_<%- i -%>",
              "label": "Heading",
              "placeholder": "Heading"
            },
            {
              "type": "text",
              "id": "column_body_copy_<%- i -%>",
              "label": "Body Copy",
              "info": "Optional",
              "placeholder": "Optional body copy"
            },
            {
              "type": "header",
              "content": "Buttons"
