              },
              {
                "value": "center_center",
                "label": "Center Center"
              },
              {
                "value": "center_right",
                "label": "Center Right"
              },
              {
                "value": "bottom_left",
                "label": "Bottom Left"
              },
              {
                "value": "bottom_center",
                "label": "Bottom Center"
              },
              {
                "value": "bottom_right",
                "label": "Bottom Right"
              }
            ],
            "default": "center_center"
          },
          <% for (let i = 1; i <= 3; i++) { %>
