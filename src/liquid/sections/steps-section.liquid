    "settings": [
    {
        "type": "text",
        "id": "steps_section_title",
        "label": "Section Title",
        "default": "How It Works",
        "info": "optional",
        "placeholder": "Title"
    },
    {
        "type": "text",
        "id": "steps_text_cta1",
        "label": "CTA 1 Text",
        "placeholder": "Text"
