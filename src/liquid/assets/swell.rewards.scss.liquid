.swell-account {
  @media (min-width: 768px) {
    padding-left: 30px !important;
  }
}

.swell-wwe {
  .swell-link-list {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 80px;
    @media (max-width: 767px) {
      margin-bottom: 40px;
    }
    .swell-link {
      width: 100%;
      max-width: 210px;
      margin: 0 auto;
      .swell-anchor {
        font-family: 'Heading Pro' !important;
        letter-spacing: 2px;
        font-weight: 700;
        color: #fff;
        text-align: center;
        font-size: 16px;
        text-transform: uppercase;
        background-color: #da1221;
        width: 100%;
        height: 100%;
        min-height: 50px;
        display: flex;
        justify-content: center;
        align-items: center;
        padding-top: 2px;
        &:hover {
          background-color: #b30000 !important;
        }
      }
    }
  }
  .swell-banner {
    position: relative;
    .swell-link-list {
      position: absolute;
      display: flex;
      left: 0;
      right: 0;
      margin: 0 auto;
      max-width: 110px;
      bottom: 23%;
      width: 100%;
      @media (max-width: 767px) {
        bottom: 18%;
      }
      @media (max-width: 479px) {
        bottom: 24%;
      }
      .swell-link {
        border-bottom: 2px solid #fff !important;
        height: auto !important;
        width: auto !important;
        padding-bottom: 3px;
        .swell-anchor {
          font-family: 'Heading Pro' !important;
          font-weight: 600 !important;
          text-transform: uppercase !important;
          background-color: transparent;
          letter-spacing: 2px;
          font-size: 21px !important;
          min-height: auto;
          line-height: normal;
          @media (max-width: 479px) {
            font-size: 18px !important;
          }
          &:hover {
            background-color: transparent !important;
          }
        }
      }
    }
  }
  .swell-account-section {
    max-width: 900px;
    width: 100%;
    margin-bottom: 50px;
    @media (max-width: 767px) {
      max-width: 100%;
      margin: 0 auto;
      padding: 0 16px;
      margin-bottom: 50px;
    }
    .account-heading {
      font-family: 'Heading Pro' !important;
      font-size: 25px !important;
      text-transform: uppercase;
      letter-spacing: 2px;
      font-weight: 600 !important;
      margin-bottom: 15px;
      @media (max-width: 767px) {
        font-size: 25px !important;
      }
      @media (max-width: 479px) {
        font-size: 20px !important;
      }
    }
    .account-points-holder {
      .points-holder {
        display: flex;
        .points-balance {
          font-family: 'Heading Pro' !important;
          background-color: #3b30fe !important;
          color: #fff !important;
          font-size: 28px;
          text-transform: uppercase;
          font-weight: 700;
          letter-spacing: 2px;
          line-height: normal;
          padding: 22px 24px;
          display: flex;
          justify-content: center;
          align-items: center;
          @media (max-width: 767px) {
            font-size: 22px;
            flex-basis: 60%;
            justify-content: unset;
            padding: 22px 40px 22px 25px;
          }
          @media (max-width: 479px) {
            font-size: 18px;
            padding: 22px 10px 22px;
          }
        }
        .swell-points {
          padding: 22px 50px;
          background-color: #eeeeee !important;
          display: flex;
          justify-content: center;
          align-items: center;
          @media (max-width: 767px) {
            font-size: 24px !important;
            flex-basis: 40%;
          }
          @media (max-width: 479px) {
            font-size: 18px !important;
            padding: 22px 25px;
          }
          .swell-points-text {
            font-family: 'Heading Pro' !important;
            font-weight: 700;
            color: #3b30fe !important;
            line-height: normal;
            font-size: 30px;
            letter-spacing: 2px;
            &.left {
              padding-left: 3px;
            }
          }
        }
      }
    }
    .status-holder {
      background-color: #232828 !important;
      padding: 40px;
      border-bottom: 1px solid #979797;
      @media (max-width: 767px) {
        padding: 30px 40px 30px 25px;
      }
      @media (max-width: 479px) {
        padding: 30px 40px 30px 15px;
      }
      .rewards-history {
        font-family: 'Heading Pro' !important;
        font-weight: 700;
        color: #fff !important;
        font-size: 16px;
        letter-spacing: 2px;
        text-transform: uppercase;
        margin-bottom: 22px;
      }
      .rewards-popup {
        font-family: 'Heading Pro' !important;
        font-weight: 700;
        color: #fff !important;
        letter-spacing: 2px;
        font-size: 20px;
        text-transform: uppercase;
        border-bottom: 2px solid #fff !important;
        padding-bottom: 3px;
      }
    }
    .description-holder {
      background-color: #232828 !important;
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 40px;
      @media (max-width: 767px) {
        flex-direction: column;
        padding: 30px 40px 30px 25px;
        align-items: flex-start;
      }
      @media (max-width: 479px) {
        padding: 30px 15px 30px;
      }
      .description-text {
        font-family: Open Sans, Arial, sans-serif !important;
        font-weight: 400;
        color: #fff !important;
        font-size: 17px;
        max-width: 450px;
        strong {
          font-family: Open Sans, Arial, sans-serif !important;
          font-weight: bold;
        }
        @media (max-width: 767px) {
          max-width: 322px;
          margin-bottom: 25px;
        }
        @media (max-width: 479px) {
          font-size: 14px;
          max-width: 250px;
        }
      }
      .swell-link {
        list-style-type: none;
        max-width: 220px;
        width: 100%;
        @media (max-width: 767px) {
          max-width: 210px;
        }
        @media (max-width: 479px) {
          max-width: 185px;
        }
        .how-to-earn {
          font-family: 'Heading Pro' !important;
          font-weight: 700;
          color: #fff !important;
          letter-spacing: 2px;
          font-size: 16px;
          background-color: #da2b2a !important;
          border-radius: 2px;
          width: 100%;
          height: 100%;
          min-height: 50px;
          display: flex;
          justify-content: center;
          align-items: center;
          text-transform: uppercase;
          cursor: pointer;
          @media (max-width: 479px) {
            min-height: 45px;
          }
          &:hover {
            background-color: #b30000 !important;
          }
        }
      }
    }
  }
}
