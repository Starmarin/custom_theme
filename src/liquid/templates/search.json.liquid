{%- layout none -%}
{%- paginate search.results by 50 -%}
{
"menu":[],
"products":[
{%- for product in search.results -%}
{%- render 'json--product',
  product: product,
-%}{%- unless forloop.last -%},{%- endunless -%}
{%- endfor -%}
],
"pages":{{ paginate.pages }},
"page":{{ current_page | minus: 1 }}
}
{%- endpaginate -%}